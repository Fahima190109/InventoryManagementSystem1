@using InventoryManagementSystem1.Models.Category
@* @using InventoryManagementSystem1.Models.Product *@
@model IEnumerable<Category>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="~/style.css" rel="stylesheet" />
    <!-- Add Bootstrap if not already included -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2>Products</h2>

        <!-- Add New Button -->
        <a class="btn btn-primary mb-3" asp-action="Create">Add New Category</a>

        <!-- Search Form -->
        <form asp-action="Index" method="Post" class="d-flex mb-3">
            <input type="text" name="searchText" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Search by Name" />
            <button type="submit" class="btn btn-info me-2">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </form>

        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            
                           
                            <td>
                                @* <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@product.Id">Details</a> *@
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                No products available.
            </div>
        }
    </div>
</body>
</html>